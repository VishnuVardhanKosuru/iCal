<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtexpression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtresult" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtexpression"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ac"
                android:text="AC"
                android:layout_margin="5dp"
                android:backgroundTint="#A9A9A9"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/modulo"
                android:text="%"
                android:layout_margin="5dp"
                android:backgroundTint="#A9A9A9"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/C"
                android:text="C"
                android:layout_margin="5dp"
                android:backgroundTint="#A9A9A9"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/divide"
                android:text="/"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9500"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seven"
                android:text="7"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eight"
                android:text="8"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nine"
                android:text="9"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multiply"
                android:text="X"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9500"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/four"
                android:text="4"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/five"
                android:text="5"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/six"
                android:text="6"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/substract"
                android:text="-"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9500"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/one"
                android:text="1"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:text="2"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/three"
                android:text="3"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sum"
                android:text="+"
                android:layout_margin="5dp"
                android:backgroundTint="#FF9500"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zerozero"
                android:text="00"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zero"
                android:text="0"
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/decimal"
                android:text="."
                android:layout_margin="5dp"
                android:backgroundTint="#2D2D2D"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/equalsto"
                android:text="="
                android:layout_margin="5dp"
                android:backgroundTint="#FF9500"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>